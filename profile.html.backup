    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
        
        * {
            font-family: 'Inter', sans-serif;
        }

        body {
            background: #0a0e14;
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }

        /* Prisma effect - Light beams based on platform percentages */
        .prisma-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0;
            overflow: hidden;
            pointer-events: none;
        }

        .light-beam {
            position: absolute;
            width: 200%;
            height: 200%;
            opacity: 0;
            animation: fadeIn 1s ease-out forwards;
            mix-blend-mode: screen;
            filter: blur(60px);
        }

        @keyframes fadeIn {
            to { opacity: 1; }
        }

        @keyframes float {
            0%, 100% { transform: translate(0, 0) rotate(0deg); }
            25% { transform: translate(20px, -20px) rotate(2deg); }
            50% { transform: translate(-15px, 15px) rotate(-1deg); }
            75% { transform: translate(15px, 10px) rotate(1deg); }
        }

        @keyframes pulse {
            0%, 100% { opacity: 0.3; }
            50% { opacity: 0.6; }
        }

        /* PlayStation beam - 20% intensity */
        .beam-playstation {
            background: radial-gradient(ellipse at center, 
                rgba(0, 112, 204, 0.25) 0%,
                rgba(0, 112, 204, 0.15) 30%,
                rgba(0, 112, 204, 0.05) 50%,
                transparent 70%
            );
            top: -50%;
            left: -20%;
            animation: float 20s ease-in-out infinite, pulse 8s ease-in-out infinite;
        }

        /* Steam beam - 60% intensity (strongest) */
        .beam-steam {
            background: radial-gradient(ellipse at center, 
                rgba(102, 192, 244, 0.45) 0%,
                rgba(102, 192, 244, 0.35) 25%,
                rgba(102, 192, 244, 0.2) 45%,
                rgba(102, 192, 244, 0.08) 60%,
                transparent 75%
            );
            top: -60%;
            right: -30%;
            animation: float 25s ease-in-out infinite reverse, pulse 10s ease-in-out infinite;
            animation-delay: 1s;
        }

        /* Xbox beam - 10% intensity */
        .beam-xbox {
            background: radial-gradient(ellipse at center, 
                rgba(16, 124, 16, 0.2) 0%,
                rgba(16, 124, 16, 0.12) 35%,
                rgba(16, 124, 16, 0.04) 55%,
                transparent 70%
            );
            bottom: -40%;
            left: 10%;
            animation: float 18s ease-in-out infinite, pulse 9s ease-in-out infinite;
            animation-delay: 2s;
        }

        /* RetroAchievements beam - 10% intensity */
        .beam-retro {
            background: radial-gradient(ellipse at center, 
                rgba(212, 160, 23, 0.2) 0%,
                rgba(212, 160, 23, 0.12) 35%,
                rgba(212, 160, 23, 0.04) 55%,
                transparent 70%
            );
            bottom: -30%;
            right: 5%;
            animation: float 22s ease-in-out infinite reverse, pulse 11s ease-in-out infinite;
            animation-delay: 3s;
        }

        /* Prisma center glow - mixing point */
        .prisma-core {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 600px;
            height: 600px;
            background: radial-gradient(circle at center,
                rgba(102, 192, 244, 0.15) 0%,
                rgba(0, 112, 204, 0.1) 25%,
                rgba(16, 124, 16, 0.05) 50%,
                rgba(212, 160, 23, 0.05) 75%,
                transparent 100%
            );
            filter: blur(80px);
            animation: pulse 15s ease-in-out infinite;
        }

        /* Content layer */
        .content-layer {
            position: relative;
            z-index: 1;
        }

        /* Dark overlay for readability */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(10, 14, 20, 0.75);
            z-index: 0;
            pointer-events: none;
        }

        /* Floating particles for prisma effect */
        .prisma-particle {
            position: absolute;
            width: 4px;
            height: 4px;
            border-radius: 50%;
            animation: floatParticle linear infinite;
            opacity: 0;
        }

        @keyframes floatParticle {
            0% {
                transform: translateY(100vh) scale(0);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                transform: translateY(-100px) scale(1);
                opacity: 0;
            }
        }

        /* Shimmer effect on cards */
        .card::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(
                90deg,
                transparent,
                rgba(102, 192, 244, 0.1),
                transparent
            );
            transition: left 0.5s;
        }

        .card:hover::after {
            left: 100%;
        }

        .card {
            position: relative;
            overflow: hidden;
            background: rgba(30, 35, 45, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-2px);
            border-color: rgba(255, 255, 255, 0.2);
        }

        .profile-card {
            background: rgba(30, 35, 45, 0.9);
            border: 2px solid rgba(96, 165, 250, 0.3);
            box-shadow: 
                0 0 20px rgba(102, 192, 244, 0.1),
                inset 0 1px 1px rgba(255, 255, 255, 0.1);
        }

        .profile-card:hover {
            box-shadow: 
                0 0 30px rgba(102, 192, 244, 0.2),
                inset 0 1px 1px rgba(255, 255, 255, 0.15);
        }

        .stat-card {
            background: rgba(20, 25, 35, 0.9);
            box-shadow: 
                0 4px 20px rgba(0, 0, 0, 0.3),
                inset 0 1px 1px rgba(255, 255, 255, 0.05);
            transition: all 0.3s ease;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 
                0 8px 30px rgba(102, 192, 244, 0.15),
                inset 0 1px 1px rgba(255, 255, 255, 0.1);
        }

        .progress-bar {
            height: 6px;
            border-radius: 3px;
            overflow: hidden;
        }

        .progress-fill {
            height: 100%;
            transition: width 0.5s ease;
        }

        .game-row {
            transition: all 0.2s ease;
        }

        .game-row:hover {
            background: rgba(96, 165, 250, 0.1);
            transform: translateX(4px);
        }

        .trophy-icon {
            color: #fbbf24;
        }

        .controller-icon {
            color: #60a5fa;
        }

        .users-icon {
            color: #34d399;
        }

        .online-indicator {
            width: 12px;
            height: 12px;
            background: #10b981;
            border-radius: 50%;
            border: 2px solid #0f1419;
            position: absolute;
            bottom: 8px;
            right: 8px;
        }

        .platform-badge {
            font-size: 11px;
            padding: 4px 8px;
            border-radius: 6px;
            background: rgba(96, 165, 250, 0.1);
            color: #93c5fd;
        }

        .game-thumbnail {
            width: 48px;
            height: 48px;
            border-radius: 8px;
            object-fit: cover;
        }

        .gradient-text {
            background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .table-header {
            color: #9ca3af;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .scrollbar-thin::-webkit-scrollbar {
            width: 6px;
        }

        .scrollbar-thin::-webkit-scrollbar-track {
            background: rgba(30, 35, 45, 0.3);
        }

        .scrollbar-thin::-webkit-scrollbar-thumb {
            background: rgba(96, 165, 250, 0.3);
            border-radius: 3px;
        }

        .scrollbar-thin::-webkit-scrollbar-thumb:hover {
            background: rgba(96, 165, 250, 0.5);
        }

        /* Small follow button - discrete style */
        .btn-follow-small {
            background: transparent;
            color: #60a5fa;
            border: 1px solid rgba(96, 165, 250, 0.4);
            padding: 4px 10px;
            border-radius: 6px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 11px;
            margin-left: 8px;
        }

        .btn-follow-small:hover {
            background: rgba(96, 165, 250, 0.1);
            border-color: #60a5fa;
            transform: translateY(-1px);
        }

        .btn-follow-small i {
            font-size: 10px;
            margin-right: 4px;
        }

        /* Pinned Achievements Styles */
        .pinned-achievements {
            margin-top: 16px;
            padding-top: 16px;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
        }

        .pinned-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 8px;
        }

        .pinned-achievement {
            background: rgba(96, 165, 250, 0.08);
            border: 1px solid rgba(96, 165, 250, 0.15);
            border-radius: 10px;
            padding: 10px 8px;
            aspect-ratio: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .pinned-achievement:hover {
            background: rgba(96, 165, 250, 0.12);
            border-color: rgba(96, 165, 250, 0.3);
            transform: translateY(-2px) scale(1.02);
            box-shadow: 0 8px 24px rgba(96, 165, 250, 0.15);
        }

        .achievement-icon {
            font-size: 28px;
            margin-bottom: 6px;
            filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
            flex-shrink: 0;
        }

        .achievement-name {
            font-size: 10px;
            font-weight: 600;
            color: #e5e7eb;
            line-height: 1.25;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            line-clamp: 2;
            -webkit-box-orient: vertical;
            width: 100%;
            padding: 0 4px;
            word-break: break-word;
        }

        @keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.5;
            }
        }

        .pulse {
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }
    </style>
</head>
